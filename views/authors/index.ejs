<h2>All Authors</h2>

<h4>Search Authors</h4>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name%>">
    <button type="submit">Search</button>
</form>

<% authors.map(author => { %>
<p>Name: <%= author.name %> || Email:<%= author.email %> </p>
<%}) %>