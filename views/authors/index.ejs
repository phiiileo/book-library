<h2>All Authors</h2>

<h4>Search Authors</h4>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name%>">
    <button type="submit">Search</button>
</form>

<% authors.map(author => { %>
    
<p>Name: <%= author.name %> || Email:<%= author.email %> </p>

<a href="/authors/<%= author._id%>">View</a>
<a href="/authors/<%= author._id%>/edit">Edit</a>

<%- include('../partials/deleteButton.ejs',{
    action_url:`/authors/${author._id}`
}) %>

<%}) %>