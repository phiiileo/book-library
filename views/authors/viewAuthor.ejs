<h3 class="page-header"><%= author.name %></h3>

<div>
    <div class="btn-row">
        <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
        <%- include('../partials/deleteButton.ejs',{
            action_url:`/authors/${author._id}`
        }) %>
    </div>


    <div>
        <h4 class="page-header">Books by <%= author.name %></h4>
        <ul>
            <% books.map(book => {%>
            <li>Title: <%= book.title%></p>
                <img src="<%= book.coverImagePath %>" style="object-fit: cover;" height="250px" width="250px"
                    alt="book image">
                Published on : <%= book.publish_at%></p>
            </li>
            <%})%>
        </ul>
    </div>
</div>