<div>
    <h2 class="page-header">All Books</h2>

    <h4>Search Books</h4>
    <form action="/books" method="GET">
        <div class="form-row">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= searchOptions.title%>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="pub_before">Publish After</label>
                <input type="date">
            </div>
            <div class="form-group">
                <label for="pub_before">Publish Before</label>
                <input type="date">
            </div>
        </div>
        <div class="btn-row form-row form-row-end">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
</div>

<div>
    <% books.map(book => { %>
    <article>
        <h5><%= book.title.toUpperCase() %></h5>
        <img src="<%= book.coverImagePath %>" style="object-fit: cover;" height="250px
        " width="250px" alt="book image">

        <div class="btn-row">
            <a class="btn btn-primary" href="/books/<%= book.id %>">View Book</a>
            <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit Book</a>
            <%- include('../partials/deleteButton.ejs',{
                action_url:`/books/${book.id}`
            }) %>
        </div>

    </article>
    <%})%>
</div>