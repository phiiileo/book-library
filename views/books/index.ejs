<div>
    <h2>All Books</h2>

    <h4>Search Books</h4>
    <form action="/books" method="GET">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= searchOptions.title%>">
        <button type="submit">Search</button>
    </form>
</div>

<div>
    <% books.map(book => { %>
    <article>
        <h5><%= book.title.toUpperCase() %></h5>
        <img src="<%= book.coverImagePath %>" style="object-fit: cover;" height="250px" width="250px" alt="book image">
        <a href="/books/<%= book.id %>">View Book</a>
        <a href="/books/<%= book.id %>/edit">Edit Book</a>
        <%- include('../partials/deleteButton.ejs',{
            action_url:`/books/${book.id}`
        }) %>
    </article>
    <%})%>
</div>