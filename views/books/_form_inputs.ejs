<div>
    <span>
        <label for="title">Title</label>
        <input type="text" name='title' value='<%= book.title %>' required>
    </span>
    <span>
        <label for="author">Author</label>
        <select name="author" id="autho" value='<%=book.author %>'>
            <% authors.map(author => { %>
            <option value="<%= author._id %>"><%= author.name %></option>
            <% }) %>
        </select>
    </span>
    <span>
        <label for="publish_at">Publish Date</label>
        <input type="date" name='publish_at' value='<%= book.publish_at %>' required>
    </span> <span>
        <label for="page_count">Page Count</label>
        <input type="text" name='page_count' value='<%= book.page_count %>' required>
    </span>
</div>
<div>
    <span>
        <label for="image">Cover</label>
        <input type="file" name="cover" class="filepond">
    </span>
    <span>
        <label for="description">Description</label>
        <textarea name="description" id="" cols="30" rows="3"></textarea>
    </span>
</div>