<% bookCoverSize = locals.large ?"book-cover-large":"" %>
<% bookGridSize = locals.large ?"book-grid-large":"" %>


<div class=" book-grid <%=bookGridSize %>">
    <% books.map(book => {%>
    <div >
        <p><%=book.title %></p>
        <p><%=book.publish_at.toDateString() %></p>
        <a href="/books/<%=book.id%>">
            <img class="book-cover <%=bookCoverSize %>" src="<%= book.coverImagePath %>" style="object-fit: cover;" height="250px" width="250px"
                alt="book image"></a>
    </div>
    <%})%>
</div>